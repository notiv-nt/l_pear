.clients
  background-color white
  position relative
  z-index 1
  padding 120px 0 60px

  _(padding, {
    xs: 50px 0
    sm: 60px 0
    md: 80px 0 20px
    lg: 100px 0 40px
    xl: 120px 0 60px
  })

  &__container
    +media(to md)
      max-width none

  &__list
    align-items center

    +media(to md)
      flex-wrap nowrap
      overflow-x auto

    +media(from md)
      justify-content center

    grid-row({
      md: 3
      lg: 4
    })

  &__item
    text-align center
    opacity .4 !important

    +media(to md)
      flex 0 0 auto
      height 60px

    +media(from md)
      margin-bottom 55px

    tr(opacity)

    &:hover
      opacity 1

    img
      display inline-block
      width auto
      height auto
      max-width 100%
      max-height 100%
