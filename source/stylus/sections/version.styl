.version
  padding-bottom 47px
  position relative
  background-color white
  z-index 1

  +media(to lg)
    padding-bottom 20px

  &__list
    padding-top 80px

    +media(to lg)
      padding-top 50px

    grid-row({
      xs: 1
      sm: 2
      lg: 3
      xl: 3
    })

  &__item
    text-align center
    margin-bottom 44px

    +media(to xl)
      margin-bottom 15px

  &__link
    color $main-color
    margin-bottom 15px

  &__image-container
    height 270px
    width 100%
    display block
    margin-bottom 13px
    overflow hidden

    _(height, {
      xs: 185px
      sm: 165px
      md: 220px
      xl: 270px
    })

    tr(box-shadow)

    ^[0]__item:hover &
      box-shadow 0 15px 30px rgba(0, 0, 0, 0.2)

  &__image
    display block
    width 100%
    height 100%
    object-fit cover
    object-position center

    tr(transform)

    ^[0]__item:hover &
      transform scale(1.06)

