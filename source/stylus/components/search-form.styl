.search-form
  display flex
  align-items center
  position absolute
  left 230px
  right 0
  top 0
  height 100%

  +media(to lg)
    left 170px

  +media(to md)
    left $grid-spacing

  &__form
    display flex
    align-items center
    width 100%
    opacity 0
    visibility hidden
    transform translateX(20px)

    tr(opacity, visibility, transform)

    .js-nav-search-container.is-open &
      opacity 1
      visibility visible
      transform translateX(0)

  &__search-icon
    font-size 1.1em
    opacity .7

  &__input
    display block
    width calc(100% - 100px)
    margin-left 15px
    background transparent
    border none
    font inherit
    outline none
    color inherit
    line-height 1.8
    font-size 1.1em
    letter-spacing .6px

    +media(to md)
      width calc(100% - 60px)

  &__switch
    position relative
    width 24px
    height @width

    +media(to md)
      margin-right $grid-spacing

  &__open, &__close
    button-reset()

    display inline-flex
    align-items center
    justify-content center
    width 24px
    height 24px
    line-height 1
    color white
    position absolute
    right 0
    cursor pointer

    tr(opacity, visibility, transform)

  &__close
    visibility hidden
    opacity 0
    transform scale(1.3)

    .js-nav-search-container.is-open &
      opacity 1
      transform scale(1)
      visibility visible

  &__open
    visibility visible
    opacity 1
    transform scale(1)

    .js-nav-search-container.is-open &
      opacity 0
      visibility hidden
      transform scale(.8)
